# Django settings
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=1
ALLOWED_HOSTS=*

CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1,http://nginx

# Django superuser credentials
DJANGO_SUPERUSER_EMAIL=admin@victorinka.com
DJANGO_SUPERUSER_NICKNAME=admin
DJANGO_SUPERUSER_PASSWORD=change-this-password

# JWT settings
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# Database settings
DB_ENGINE=postgresql
POSTGRES_DB=victorinka_db
POSTGRES_USER=victorinka_user
POSTGRES_PASSWORD=victorinka_pass
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Redis настройки
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# RabbitMQ настройки
RABBITMQ_USER=admin
RABBITMQ_PASS=admin
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672

# Для локальной разработки без Docker используйте:
# DB_ENGINE=sqlite
# POSTGRES_HOST=localhost
# REDIS_HOST=localhost
# RABBITMQ_HOST=localhost

# Email settings
# Для разработки (вывод в консоль):
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Для production (реальная отправка через Mail.ru SMTP):
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.mail.ru
EMAIL_PORT=465
EMAIL_USE_TLS=0
EMAIL_USE_SSL=1
EMAIL_HOST_USER=victorinka_helper@list.ru
EMAIL_HOST_PASSWORD=your-smtp-password-here
DEFAULT_FROM_EMAIL=victorinka_helper@list.ru

# Альтернатива для Mail.ru через TLS (port 587):
# EMAIL_PORT=587
# EMAIL_USE_TLS=1
# EMAIL_USE_SSL=0

# Настройки восстановления пароля
PASSWORD_RESET_TIMEOUT=3600
SITE_NAME=Victorinka Quiz Platform
FRONTEND_URL=http://localhost:3000

